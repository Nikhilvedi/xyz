@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Fira+Code:wght@400;500&display=swap')

// Variables
primary-color = #6366f1
primary-dark = #4f46e5
secondary-color = #10b981
accent-color = #f59e0b
dark-bg = #0f172a
darker-bg = #020617
light-text = #f8fafc
muted-text = #94a3b8
border-color = #1e293b

// Reset
*
  margin 0
  padding 0
  box-sizing border-box

html
  scroll-behavior smooth

body
  font-family 'Inter', -apple-system, BlinkMacSystemFont, sans-serif
  background dark-bg
  color light-text
  line-height 1.6
  overflow-x hidden

// Container
.container
  max-width 1100px
  margin 0 auto
  padding 0 20px

// Navigation
.navbar
  position fixed
  top 0
  left 0
  right 0
  z-index 1000
  background rgba(15, 23, 42, 0.95)
  backdrop-filter blur(10px)
  padding 15px 40px
  display flex
  justify-content space-between
  align-items center
  border-bottom 1px solid border-color

.nav-brand a
  font-size 24px
  font-weight 700
  color primary-color
  text-decoration none
  transition color 0.3s

  &:hover
    color primary-dark

.nav-menu
  list-style none
  display flex
  gap 10px

  @media (max-width: 768px)
    position fixed
    top 70px
    left 0
    right 0
    background darker-bg
    flex-direction column
    padding 20px
    transform translateY(-150%)
    transition transform 0.3s ease
    border-bottom 1px solid border-color

    &.active
      transform translateY(0)

.nav-item

.nav-link
  display block
  padding 10px 20px
  color muted-text
  text-decoration none
  font-weight 500
  border-radius 8px
  transition all 0.3s

  &:hover
    color light-text
    background rgba(99, 102, 241, 0.1)

.nav-toggle
  display none
  flex-direction column
  cursor pointer
  gap 5px

  @media (max-width: 768px)
    display flex

  .bar
    width 25px
    height 3px
    background light-text
    border-radius 3px
    transition all 0.3s

// Hero Section
.hero
  min-height 100vh
  display flex
  align-items center
  justify-content center
  text-align center
  padding 100px 20px 60px
  background linear-gradient(135deg, darker-bg 0%, dark-bg 50%, rgba(99, 102, 241, 0.1) 100%)
  position relative
  overflow hidden

  &::before
    content ''
    position absolute
    top -50%
    left -50%
    width 200%
    height 200%
    background radial-gradient(circle, rgba(99, 102, 241, 0.05) 0%, transparent 50%)
    animation pulse 15s ease-in-out infinite

.hero-content
  max-width 700px
  z-index 1

.hero-image
  margin-bottom 30px

.profile-placeholder
  width 150px
  height 150px
  border-radius 50%
  background linear-gradient(135deg, primary-color, secondary-color)
  display flex
  align-items center
  justify-content center
  margin 0 auto
  box-shadow 0 20px 50px rgba(99, 102, 241, 0.3)
  animation float 6s ease-in-out infinite

  i
    font-size 60px
    color light-text

.hero-title
  font-size clamp(2.5rem, 8vw, 4.5rem)
  font-weight 700
  margin-bottom 10px
  background linear-gradient(135deg, light-text, muted-text)
  -webkit-background-clip text
  -webkit-text-fill-color transparent
  background-clip text

.hero-subtitle
  font-size clamp(1.2rem, 3vw, 1.8rem)
  color primary-color
  margin-bottom 15px
  min-height 40px
  font-family 'Fira Code', monospace

.typed-text
  font-weight 500

.cursor
  animation blink 1s infinite
  color primary-color

.hero-description
  font-size 1.1rem
  color muted-text
  margin-bottom 40px
  max-width 500px
  margin-left auto
  margin-right auto

.hero-cta
  display flex
  gap 20px
  justify-content center
  flex-wrap wrap

.btn
  padding 14px 32px
  border-radius 12px
  text-decoration none
  font-weight 600
  font-size 1rem
  transition all 0.3s
  cursor pointer
  border none

.btn-primary
  background primary-color
  color light-text
  box-shadow 0 4px 15px rgba(99, 102, 241, 0.4)

  &:hover
    background primary-dark
    transform translateY(-2px)
    box-shadow 0 8px 25px rgba(99, 102, 241, 0.5)

.btn-secondary
  background transparent
  color light-text
  border 2px solid border-color

  &:hover
    border-color primary-color
    color primary-color
    transform translateY(-2px)

// Section Styles
section
  padding 100px 20px

.section-title
  font-size clamp(2rem, 5vw, 2.5rem)
  font-weight 700
  text-align center
  margin-bottom 50px
  position relative

  &::after
    content ''
    position absolute
    bottom -15px
    left 50%
    transform translateX(-50%)
    width 60px
    height 4px
    background linear-gradient(90deg, primary-color, secondary-color)
    border-radius 2px

// About Section
.about
  background darker-bg

.about-content
  max-width 800px
  margin 0 auto
  text-align center

.about-text
  font-size 1.1rem
  color muted-text
  margin-bottom 20px
  line-height 1.8

// Contact Section
.contact
  text-align center

.contact-text
  color muted-text
  font-size 1.1rem
  margin-bottom 40px

.social-links
  display flex
  justify-content center
  gap 25px

.social-link
  width 60px
  height 60px
  border-radius 50%
  background border-color
  display flex
  align-items center
  justify-content center
  color light-text
  font-size 24px
  text-decoration none
  transition all 0.3s

  &:hover
    background primary-color
    transform translateY(-5px) scale(1.1)
    box-shadow 0 10px 30px rgba(99, 102, 241, 0.4)

// Footer
.footer
  background darker-bg
  padding 30px 20px
  text-align center
  border-top 1px solid border-color

  p
    color muted-text
    font-size 14px

// Animations
@keyframes pulse
  0%, 100%
    transform scale(1)
  50%
    transform scale(1.05)

@keyframes float
  0%, 100%
    transform translateY(0)
  50%
    transform translateY(-20px)

@keyframes blink
  0%, 50%
    opacity 1
  51%, 100%
    opacity 0

// Keep legacy styles for other pages
.header
  background #1e293b
  background-position center

  .page-title 
    font-weight 200
    font-size 80px
    text-align center
    padding 100px
    text-transform uppercase
    color #fff

.nav
  background #000
  text-align center

  li
    display inline-block

  a
    display inline-block
    padding 20px
    color #fff
    text-decoration none

    &:hover
      background-color #3AB795
      text-decoration underline

.main-content
  margin 50px auto
  max-width 600px
  p
    line-height 1.6
    margin-bottom 1.7em
  image-block
    text-align center
  img
    max-height 200px

// Responsive
@media (max-width: 768px)
  .hero
    padding 80px 20px 40px

  .hero-cta
    flex-direction column
    align-items center

  .btn
    width 100%
    max-width 250px
    text-align center
